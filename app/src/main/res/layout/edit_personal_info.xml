<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ADD8E6"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/edit_info_back_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="返回"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#bfbfbf"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:focusable="false">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="用户名"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="电话号码"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="20dp"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="邮箱"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="性别"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="生日"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="所在地"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_info_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginBottom="20dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_info_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_info_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/edit_info_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/edit_info_save"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:background="#ADD8E6"
        android:onClick="Save_info"
        android:text="保存"/>
</LinearLayout>